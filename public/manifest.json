{
  "manifest_version": 2,
  "name": "RAKT",
  "description": "React, Chrome, and Redux messaging chrome extension",
  "version": "0.0.0.1",
  "background": {
    "scripts": [
      "background.bundle.js",
      "content.bundle.js",
      "popup.bundle.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "RAKT Chat",
    "default_popup": "popup.html",
    "default_icon": "messagebubble.png"
  },
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://*/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "content.bundle.js"
      ]
    }
  ]
}